<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DbInspector.BaseTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dbinspector_color_primary</item>
        <item name="colorOnPrimary">@color/dbinspector_color_on_primary</item>
        <item name="colorPrimaryContainer">@color/dbinspector_color_primary_container</item>
        <item name="colorSecondary">@color/dbinspector_color_secondary</item>
        <item name="colorOnPrimaryContainer">@color/dbinspector_color_primary_on_container</item>
        <item name="colorSecondaryContainer">@color/dbinspector_color_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/dbinspector_color_secondary_on_container</item>
        <item name="colorSurfaceVariant">@color/dbinspector_color_surface_variant</item>
        <item name="bottomSheetDialogTheme">@style/DbInspector.Theme.BottomSheetDialog</item>
    </style>

    <style name="DbInspector.ToggleButton" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/dbinspector_toggle_button_corner_radius</item>
        <item name="android:layout_height">@dimen/dbinspector_toggle_button_size</item>
    </style>

    <style name="DbInspector.Theme.BottomSheetDialog" parent="@style/ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/DbInspector.Theme.BottomSheetDialog.Style</item>
    </style>

    <style name="DbInspector.Theme.BottomSheetDialog.Style" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/DbInspector.ShapeAppearanceOverlay.BottomSheet
        </item>
    </style>

    <style name="DbInspector.ShapeAppearanceOverlay.BottomSheet" parent="">
        <item name="cornerSizeTopLeft">@dimen/dbinspector_bottom_sheet_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/dbinspector_bottom_sheet_corner_radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>